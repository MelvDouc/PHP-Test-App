<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="/js/main.js" type="module"></script>
  <title>Espace Admin - {% block title %}{% endblock %}</title>
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="{{ route('admin-home') }}">Accueil Espace Admin</a></li>
        <li><a href="{{ route('home') }}">Retour au site</a></li>
      </ul>
    </nav>
  </header>

  {% if app.successMessage %}
    <p>{{ app.successMessage }}</p>
  {% endif %}

  {% if app.errorMessages %}
    <ul>
      {% for message in app.errorMessages %}
        <li>{{ message }}</li>
      {% endfor %}
    </ul>
  {% endif %}

  <main>
    {% block main %}{% endblock %}
  </main>

  {% block javascripts %}{% endblock %}
</body>
</html>